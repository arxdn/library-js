{
  "name": "@arxdn/library-js",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspace=shared && npm run build --workspaces --exclude=shared",
    "test": "npm run test --workspaces",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0",
    "jsdom": "^24.0.0"
  }
}
